class <%= controller_name %> < <%= controller_type %>
  extend IB

  ## define accessors
  attr_accessor <%= (options[:accessors] + options[:outlets]).collect { |acc| ":#{acc}"}.join(", ") %>

  ## define ib outlets
<% options[:outlets].each do |name| -%>
  ib_outlet :<%= name %>
<% end -%>

  ## define ib action 
<% options[:actions].each do |action| -%>
  ib_action :<%= action %>
<% end -%>

  ## define actions
<% options[:actions].each do |action| -%>
  def <%= action %>(sender)
    # TODO Implement action here
  end
<% end -%>

end